1605 IF YB(3) + VY >= YP(3) AND YB(3) + VY < YP(3) + SB AND XB(3) + VX >= XP AND XB(3) + VX < XP + 5 THEN FL=1:REM "UPPER LEFT CORNER HITS PLAYER"
1606 IF YB(3) + VY >= YP(3) AND YB(3) + VY < YP(3) + SB AND XB(3) + 5 + VX >= XP AND XB(3) + 5 + VX < XP + 5 THEN FL=1:REM "UPPER RIGHT CORNER HITS PLAYER"
1607 IF YB(3) + VY + SP >= YP(3) AND YB(3) + VY + SP < YP(3) + SB AND XB(3)+ VX >= XP AND XB(3) + VX < XP + 5 THEN FL=1:REM "BOTTOM LEFT CORNER HITS PLAYER"
1608 IF YB(3)  + VY + SP >= YP(3) AND YB(3) + VY + SP < YP(3) + SB AND XB(3) + 5 + VX >= XP AND XB(3) + 5 + VX < XP + 5 THEN FL=1:REM "BOTTOM RIGHT CORNER HITS PLAYER"
1615 IF FL=1 THEN VX=0-VX
1620 XB(3)=XB(3)+VX:YB(3)=YB(3) + VY
9999 GOTO 1000
10000 END